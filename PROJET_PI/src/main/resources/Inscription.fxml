<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.InscriptionController"
      alignment="CENTER" spacing="20" style="-fx-background-color: pink;"
      prefHeight="800.0" prefWidth="400.0">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Title -->
    <Text text="Inscription" style="-fx-fill: white;">
        <font>
            <Font name="Segoe UI Bold" size="30.0"/>
        </font>
    </Text>

    <!-- Form Fields -->
    <VBox spacing="15" maxWidth="400">
        <!-- Image Upload -->
        <VBox spacing="5" alignment="CENTER">
            <ImageView fx:id="imgPreview" fitWidth="150" fitHeight="150" style="-fx-background-color: white; -fx-background-radius: 75;"/>
            <Button fx:id="btnUploadImage" 
                    text="Choisir une photo" 
                    onAction="#handleImageUpload"
                    style="-fx-background-color: white; -fx-text-fill: #ff7fa8; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand;"/>
        </VBox>

        <!-- Nom Field -->
        <VBox spacing="5">
            <Label text="Nom" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtNom" 
                      prefHeight="40" 
                      style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: white; -fx-background-color: white;"/>
        </VBox>

        <!-- Prénom Field -->
        <VBox spacing="5">
            <Label text="Prénom" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtPrenom" 
                      prefHeight="40" 
                      style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: white; -fx-background-color: white;"/>
        </VBox>

        <!-- Numéro de téléphone Field -->
        <VBox spacing="5">
            <Label text="Numéro de téléphone" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtNumeroTel" 
                      prefHeight="40" 
                      style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: white; -fx-background-color: white;"/>
        </VBox>

        <!-- Email Field -->
        <VBox spacing="5">
            <Label text="Email" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtEmail" 
                      prefHeight="40" 
                      style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: white; -fx-background-color: white;"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5">
            <Label text="Mot de passe" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <PasswordField fx:id="txtPassword" 
                          prefHeight="40" 
                          style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: white; -fx-background-color: white;"/>
        </VBox>

        <!-- Confirm Password Field -->
        <VBox spacing="5">
            <Label text="Confirmer le mot de passe" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <PasswordField fx:id="txtConfirmPassword" 
                          prefHeight="40" 
                          style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: white; -fx-background-color: white;"/>
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0;">
            <Button fx:id="btnInscrire" 
                    text="S'inscrire" 
                    prefWidth="150" 
                    prefHeight="45"
                    onAction="#handleInscription"
                    style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 25; -fx-cursor: hand;"/>
            
            <Button fx:id="btnAnnuler" 
                    text="Annuler" 
                    prefWidth="150" 
                    prefHeight="45"
                    onAction="#handleAnnuler"
                    style="-fx-background-color: white; -fx-text-fill: #ff7fa8; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 25; -fx-cursor: hand;"/>
        </HBox>
    </VBox>
</VBox> 