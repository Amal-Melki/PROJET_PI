<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="518.0" prefWidth="636.0"
      style="-fx-background-color: pink;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.ModifierMaterielFormulaire">

    <children>

        <!-- Bouton Retour en haut à droite -->
        <Button fx:id="btnRetour"
                text="↩ Retour"
                layoutX="550.0" layoutY="20.0"
                onAction="#retourAccueil"
                style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 6 12 6 12;" />

        <!-- Titre Modifier Matériels -->
        <Text text="Modifier Matériels"
              layoutX="210.0" layoutY="70.0"
              style="-fx-fill: white;">
            <font>
                <Font name="Segoe UI Bold" size="30.0"/>
            </font>
        </Text>

        <!-- Labels et champs -->
        <Label layoutX="76.0" layoutY="130.0" text="Nom :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="tfNom" layoutX="219.0" layoutY="125.0" prefWidth="300.0" />

        <Label layoutX="76.0" layoutY="190.0" text="Type :">
            <font><Font size="15.0" /></font>
        </Label>
        <ComboBox fx:id="cbType" layoutX="219.0" layoutY="185.0" prefWidth="300.0" />

        <Label layoutX="76.0" layoutY="250.0" text="Quantité :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="tfQuantite" layoutX="219.0" layoutY="245.0" prefWidth="300.0" />

        <Label layoutX="76.0" layoutY="310.0" text="État :">
            <font><Font size="15.0" /></font>
        </Label>
        <ComboBox fx:id="cbEtat" layoutX="219.0" layoutY="305.0" prefWidth="300.0" />

        <Label layoutX="76.0" layoutY="370.0" text="Description :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextArea fx:id="taDescription" layoutX="219.0" layoutY="365.0" prefHeight="60.0" prefWidth="300.0" />

        <!-- Bouton Enregistrer -->
        <Button fx:id="btnModifier"
                layoutX="260.0" layoutY="450.0"
                text="Enregistrer"
                onAction="#modifierMateriel"
                style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 6 12 6 12;"
                prefWidth="120.0" prefHeight="40.0" />

    </children>
</Pane>
