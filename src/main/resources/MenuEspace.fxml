<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="600" spacing="20" style="-fx-background-color: pink;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.MenuEspace">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <Text layoutX="230" layoutY="60" text="Gestion des Espaces">
        <font>
            <Font name="Segoe UI Bold" size="30.0" />
        </font>
        <style>
            -fx-fill: white;
        </style>
    </Text>

    <!-- ADMIN -->
    <Button fx:id="btnAjoutEspace" prefHeight="45" prefWidth="260"
            style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold';"
            text="➕ AjouterEspaceAdmin" />

    <Button fx:id="btnListeEspaces" prefHeight="45" prefWidth="260"
            style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold';"
            text="📄 ListeEspacesAdmin" />

    <!-- CLIENT -->
    <Button fx:id="btnConsulterEspaces" prefHeight="45" prefWidth="260"
            style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold';"
            text="🔍 ConsulterEspacesClient" />

    <Button fx:id="btnAjouterReservation" prefHeight="45" prefWidth="260"
            style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold';"
            text="📝 AjouterReservationClient" />

    <Button fx:id="btnMesReservations" prefHeight="45" prefWidth="260"
            style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold';"
            text="📋 MesRéservationsClient" />

    <Button fx:id="btnDetailsReservation" prefHeight="45" prefWidth="260"
            style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold';"
            text="📌 DétailsRéservationClient" />
</VBox>