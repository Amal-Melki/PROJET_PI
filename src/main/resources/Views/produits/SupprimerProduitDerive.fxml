<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.Controllers.SupprimerProduitDerive"
      prefHeight="600.0" prefWidth="800.0"
      style="-fx-background-color: pink;">

    <children>

        <!-- Bouton Retour -->
        <Button fx:id="btnRetour"
                layoutX="680.0" layoutY="20.0"
                text="↩ Retour"
                onAction="#retourAccueil"
                style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 6 12 6 12;" />

        <!-- Titre -->
        <Text layoutX="220.0" layoutY="60.0"
              text="Suppression des Produits Dérivés"
              style="-fx-fill: white;">
            <Font name="Segoe UI Bold" size="30.0"/>
        </Text>

        <!-- TableView des produits -->
        <TableView fx:id="tableProduits"
                   layoutX="50.0" layoutY="80.0"
                   prefHeight="450.0" prefWidth="700.0"
                   style="-fx-background-color: white; -fx-border-color: #ffcccc; -fx-border-radius: 15; -fx-background-radius: 10; -fx-padding: 10;">

            <columns>
                <TableColumn fx:id="colNom" prefWidth="200.0" text="Nom du Produit" />
                <TableColumn fx:id="colCategorie" prefWidth="150.0" text="Catégorie" />
                <TableColumn fx:id="colPrix" prefWidth="100.0" text="Prix (€)" />
                <TableColumn fx:id="colStock" prefWidth="100.0" text="Stock" />
                <TableColumn fx:id="colSupprimer" prefWidth="150.0" text="Action" />
            </columns>
        </TableView>

    </children>
</Pane>
