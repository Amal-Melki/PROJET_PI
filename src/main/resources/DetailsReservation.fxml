<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="419.0" prefWidth="375.0" style="-fx-background-color: pink;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.esprit.controllers.AjoutReservationController">
    <children>

        <!-- Bouton Retour -->
        <Button layoutX="260.0" layoutY="20.0"
                text="↩ Retour"
                onAction="#retourMenu"
                style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand;
                       -fx-padding: 6 12 6 12;" />

        <!-- Titre -->
        <Label layoutX="50.0" layoutY="70.0" text="Détails de la Réservation" style="-fx-text-fill: white;">
            <font>
                <Font name="Segoe UI Bold" size="24.0" />
            </font>
        </Label>

        <!-- Labels avec données -->
        <Label layoutX="40.0" layoutY="140.0" text="Espace réservé :">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Label fx:id="espaceLabel" layoutX="170.0" layoutY="140.0"
               style="-fx-font-style: italic; -fx-text-fill: white;" text="Nom de l'espace" />

        <Label layoutX="40.0" layoutY="180.0" text="Utilisateur :">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Label fx:id="userLabel" layoutX="170.0" layoutY="180.0"
               style="-fx-font-style: italic; -fx-text-fill: white;" text="Nom de l'utilisateur" />

        <Label layoutX="40.0" layoutY="220.0" text="Date de début :">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Label fx:id="dateDebutLabel" layoutX="170.0" layoutY="220.0"
               style="-fx-font-style: italic; -fx-text-fill: white;" text="JJ/MM/AAAA" />

        <Label layoutX="40.0" layoutY="260.0" text="Date de fin :">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Label fx:id="dateFinLabel" layoutX="170.0" layoutY="260.0"
               style="-fx-font-style: italic; -fx-text-fill: white;" text="JJ/MM/AAAA" />

    </children>
</Pane>
