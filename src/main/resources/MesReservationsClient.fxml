<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.MesReservationsClient"
      prefHeight="600.0" prefWidth="700.0"
      style="-fx-background-color: pink;">

    <children>
        <!-- Bouton Retour -->
        <Button fx:id="btnRetour"
                layoutX="600.0" layoutY="20.0"
                text="↩ Retour"
                onAction="#retourConsulterEspaces"
                style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 6 12 6 12;" />

        <!-- Titre -->
        <Text text="Mes Réservations"
              layoutX="230.0" layoutY="70.0"
              style="-fx-fill: white;">
            <font>
                <Font name="Segoe UI Bold" size="30.0" />
            </font>
        </Text>

        <!-- TableView pour afficher les réservations -->
        <TableView fx:id="tableReservations"
                   layoutX="30.0" layoutY="120.0"
                   prefHeight="320.0" prefWidth="640.0"
                   style="-fx-border-color: white; -fx-border-radius: 10; -fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="colReservationId" prefWidth="80" text="ID" />
                <TableColumn fx:id="colEspace" prefWidth="150" text="Espace" />
                <TableColumn fx:id="colDateDebut" prefWidth="150" text="Date Début" />
                <TableColumn fx:id="colDateFin" prefWidth="150" text="Date Fin" />
                <TableColumn fx:id="colStatus" prefWidth="110" text="Statut" />
            </columns>
        </TableView>

        <!-- Boutons d'action -->
        <Button fx:id="btnAnnulerReservation"
                layoutX="140.0" layoutY="480.0"
                text="Annuler la réservation"
                onAction="#annulerReservation"
                prefWidth="180.0" prefHeight="45.0"
                style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 20; -fx-cursor: hand;" />

        <Button fx:id="btnVoirDetails"
                layoutX="380.0" layoutY="480.0"
                text="Voir les détails"
                onAction="#voirDetails"
                prefWidth="180.0" prefHeight="45.0"
                style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 20; -fx-cursor: hand;" />

    </children>
</Pane>