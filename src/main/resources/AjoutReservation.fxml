<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.AjoutReservation"
      prefHeight="500.0" prefWidth="650.0"
      style="-fx-background-color: pink;">

    <children>
        <Label layoutX="70.0" layoutY="40.0" text="Matériel">
            <font><Font size="14.0" /></font>
        </Label>
        <ComboBox fx:id="cbMateriel" layoutX="200.0" layoutY="35.0" prefWidth="300.0" />

        <Label layoutX="70.0" layoutY="95.0" text="Date début">
            <font><Font size="14.0" /></font>
        </Label>
        <DatePicker fx:id="dpDebut" layoutX="200.0" layoutY="90.0" prefWidth="300.0" />

        <Label layoutX="70.0" layoutY="150.0" text="Date fin">
            <font><Font size="14.0" /></font>
        </Label>
        <DatePicker fx:id="dpFin" layoutX="200.0" layoutY="145.0" prefWidth="300.0" />

        <Label layoutX="70.0" layoutY="205.0" text="Quantité réservée">
            <font><Font size="14.0" /></font>
        </Label>
        <TextField fx:id="tfQuantite" layoutX="200.0" layoutY="200.0" prefWidth="300.0" />

        <Label layoutX="70.0" layoutY="260.0" text="Statut">
            <font><Font size="14.0" /></font>
        </Label>
        <ComboBox fx:id="cbStatut" layoutX="200.0" layoutY="255.0" prefWidth="300.0" />

        <Button fx:id="btnReserver"
                layoutX="250.0" layoutY="340.0"
                text="Réserver"
                onAction="#reserverMateriel"
                style="-fx-background-color: #ff8cb3;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 15;
                       -fx-cursor: hand;
                       -fx-padding: 4 10 4 10;" />
    </children>
</Pane>
