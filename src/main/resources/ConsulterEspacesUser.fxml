<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.esprit.controllers.ConsulterEspacesUserController"
            prefHeight="550.0" prefWidth="800.0"
            style="-fx-background-color: pink;">

    <!-- En-tête avec Titre et Bouton de retour -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20" />
            </padding>

            <HBox alignment="CENTER">
                <!-- Titre -->
                <Text style="-fx-fill: white;" text="Espaces Disponibles">
                    <font>
                        <Font name="Segoe UI Bold" size="30.0"/>
                    </font>
                </Text>

                <!-- Espace pour pousser le bouton à droite -->
                <HBox HBox.hgrow="ALWAYS" />

                <!-- Bouton Retour -->
                <Button fx:id="btnRetour" onAction="#retourMenu"
                        style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-font-size: 13px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold';
                               -fx-cursor: hand; -fx-padding: 6 12 6 12;"
                        text="↩ Retour"/>
            </HBox>

            <!-- Barre de recherche et filtres -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtRecherche" promptText="Rechercher un espace..." prefWidth="300.0" HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="comboType" promptText="Filtrer par type" prefWidth="150.0"/>
                <Button fx:id="btnRechercher" onAction="#rechercherEspace" prefHeight="30.0" prefWidth="100.0"
                        style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-font-size: 14px; -fx-background-radius: 25; -fx-cursor: hand;"
                        text="Rechercher"/>
            </HBox>
        </VBox>
    </top>

    <!-- Tableau des espaces -->
    <center>
        <VBox>
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <TableView fx:id="tableEspaces" VBox.vgrow="ALWAYS"
                       style="-fx-border-color: #ff8fb3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-family: 'Segoe UI';">
                <columns>
                    <TableColumn fx:id="colNom" prefWidth="120" text="Nom"/>
                    <TableColumn fx:id="colType" prefWidth="120" text="Type"/>
                    <TableColumn fx:id="colCapacite" prefWidth="100" text="Capacité"/>
                    <TableColumn fx:id="colLocalisation" prefWidth="140" text="Localisation"/>
                    <TableColumn fx:id="colPrix" prefWidth="100" text="Prix"/>
                    <TableColumn fx:id="colDisponibilite" prefWidth="120" text="Disponibilité"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <!-- Boutons d'action -->
    <bottom>
        <HBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>

            <Button fx:id="btnReserver" onAction="#reserverEspace" prefHeight="40.0" prefWidth="160.0"
                    style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-font-size: 14px; -fx-background-radius: 25; -fx-cursor: hand;"
                    text="Réserver"/>

            <Button fx:id="btnVoirReservations" onAction="#voirMesReservations" prefHeight="40.0" prefWidth="160.0"
                    style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-font-size: 14px; -fx-background-radius: 25; -fx-cursor: hand;"
                    text="Mes Réservations"/>
        </HBox>
    </bottom>
</BorderPane>