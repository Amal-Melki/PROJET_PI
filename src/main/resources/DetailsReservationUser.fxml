<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="624.0" prefWidth="684.0" style="-fx-background-color: pink;" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.DetailsReservationUserController">
    <!-- Bouton Retour -->
    <Button fx:id="btnRetour" layoutX="569.0" layoutY="24.0" onAction="#retourMesReservations"
            style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 6 12 6 12;"
            text="↩ Retour"/>

    <!-- Titre -->
    <Label layoutX="140.0" layoutY="40.0" style="-fx-text-fill: white;" text="Détails de ma Réservation">
        <font>
            <Font name="Segoe UI Bold" size="28.0"/>
        </font>
    </Label>

    <!-- Conteneur principal -->
    <VBox layoutX="76.0" layoutY="84.0" prefHeight="489.0" prefWidth="533.0" spacing="15.0"
          style="-fx-background-color: rgba(255, 255, 255, 0.6); -fx-padding: 20; -fx-background-radius: 15;">

        <!-- Détails de l'espace -->
        <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #ff7fa8;"
               text="Informations de l'espace">
            <font>
                <Font name="Segoe UI Bold" size="20.0"/>
            </font>
        </Label>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Nom :"/>
            <Label fx:id="nomEspaceLabel" style="-fx-font-family: 'Segoe UI';"/>
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Type :"/>
            <Label fx:id="typeEspaceLabel" style="-fx-font-family: 'Segoe UI';"/>
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Capacité :"/>
            <Label fx:id="capaciteEspaceLabel" style="-fx-font-family: 'Segoe UI';"/>
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Localisation :"/>
            <Label fx:id="localisationEspaceLabel" style="-fx-font-family: 'Segoe UI';"/>
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Prix :"/>
            <Label fx:id="prixEspaceLabel" style="-fx-font-family: 'Segoe UI';"/>
        </HBox>

        <!-- Détails de la réservation -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ff7fa8; -fx-padding: 10 0 0 0;"
               text="Informations de la réservation">
            <font>
                <Font name="Segoe UI Bold" size="20.0"/>
            </font>
        </Label>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Numéro de réservation :"/>
            <Label fx:id="reservationIdLabel" style="-fx-font-family: 'Segoe UI';"/>
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Date de début :"/>
            <Label fx:id="dateDebutLabel" style="-fx-font-family: 'Segoe UI';"/>
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Date de fin :"/>
            <Label fx:id="dateFinLabel" style="-fx-font-family: 'Segoe UI';"/>
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Statut :"/>
            <Label fx:id="statutLabel" style="-fx-font-family: 'Segoe UI';"/>
        </HBox>

    </VBox>
</Pane>
