<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="624.0" prefWidth="684.0" style="-fx-background-color: pink;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.esprit.controllers.DetailsReservationUserController">

    <!-- Titre - maintenant avec remplissage blanc comme la première interface -->
    <Text layoutX="180.0" layoutY="50.0" style="-fx-fill: white;" text="Détails de ma Réservation">
        <font>
            <Font name="Segoe UI Bold" size="28.0"/>
        </font>
    </Text>

    <!-- Bouton Retour - cohérent avec l'autre interface -->
    <Button fx:id="btnRetour" layoutX="600.0" layoutY="20.0" onAction="#retourMesReservations"
            style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold;
                   -fx-font-size: 13px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold';
                   -fx-cursor: hand; -fx-padding: 6 12 6 12;"
            text="↩ Retour"/>

    <!-- Conteneur principal - style cohérent avec la première interface -->
    <VBox layoutX="76.0" layoutY="84.0" prefHeight="489.0" prefWidth="533.0" spacing="15.0"
          style="-fx-background-color: rgba(255, 255, 255, 0.6); -fx-padding: 20;
                 -fx-background-radius: 15; -fx-font-family: 'Segoe UI';">

        <!-- Détails de l'espace - titre en rose -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ff8fb3;"
               text="Informations de l'espace"/>

        <!-- Utilisation de HBox comme dans l'original -->
        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Nom :" />
            <Label fx:id="nomEspaceLabel" />
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Type :" />
            <Label fx:id="typeEspaceLabel" />
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Capacité :" />
            <Label fx:id="capaciteEspaceLabel" />
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Localisation :" />
            <Label fx:id="localisationEspaceLabel" />
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Prix :" />
            <Label fx:id="prixEspaceLabel" />
        </HBox>

        <!-- Détails de la réservation - titre en rose -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ff8fb3;
                      -fx-padding: 10 0 0 0;" text="Informations de la réservation"/>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Numéro de réservation :" />
            <Label fx:id="reservationIdLabel" />
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Date de début :" />
            <Label fx:id="dateDebutLabel" />
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Date de fin :" />
            <Label fx:id="dateFinLabel" />
        </HBox>

        <HBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Statut :" />
            <Label fx:id="statutLabel" />
        </HBox>

        <!-- Espacement pour positionner le bouton en bas -->
        <Region VBox.vgrow="ALWAYS" />

        <!-- Bouton Télécharger PDF - style cohérent avec les boutons de l'autre interface -->
        <HBox alignment="CENTER">
            <Button fx:id="btnDownloadPDF" onAction="#downloadPDF" prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold';
                           -fx-cursor: hand;"
                    text="Télécharger en PDF" />
        </HBox>
    </VBox>
</AnchorPane>