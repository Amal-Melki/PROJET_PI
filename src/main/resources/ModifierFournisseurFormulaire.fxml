<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.ModifierFournisseurFormulaire"
      prefHeight="500.0" prefWidth="600.0"
      style="-fx-background-color: pink;">

    <children>
        <Label layoutX="80.0" layoutY="50.0" text="Nom">
            <font><Font size="14.0" /></font>
        </Label>
        <TextField fx:id="tfNom" layoutX="200.0" layoutY="45.0" prefWidth="250.0" />

        <Label layoutX="80.0" layoutY="110.0" text="Téléphone">
            <font><Font size="14.0" /></font>
        </Label>
        <TextField fx:id="tfTelephone" layoutX="200.0" layoutY="105.0" prefWidth="250.0" />

        <Label layoutX="80.0" layoutY="170.0" text="Adresse">
            <font><Font size="14.0" /></font>
        </Label>
        <TextField fx:id="tfAdresse" layoutX="200.0" layoutY="165.0" prefWidth="250.0" />

        <Label layoutX="80.0" layoutY="230.0" text="Email">
            <font><Font size="14.0" /></font>
        </Label>
        <TextField fx:id="tfEmail" layoutX="200.0" layoutY="225.0" prefWidth="250.0" />

        <Button fx:id="btnEnregistrer"
                layoutX="240.0" layoutY="320.0"
                mnemonicParsing="false" text="Enregistrer"
                onAction="#modifierFournisseur"
                />
    </children>
</Pane>
