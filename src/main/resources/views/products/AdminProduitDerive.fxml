<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.Controllers.AdminProduitDerive"
      spacing="24"
      style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef);">
    <padding>
        <Insets top="32" right="32" bottom="32" left="32"/>
    </padding>

    <VBox spacing="16" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Administration des Produits Dérivés"
                   style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                <Button fx:id="btnRetourAccueil"
                        text="↩ Retour à l'accueil"
                        onAction="#retourAccueil"
                        style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 8; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand; -fx-padding: 12 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>
            </HBox>
        </HBox>
        <Label text="Gérer l'ensemble des produits dérivés de votre boutique."
               style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
    </VBox>

    <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>
        <TableView fx:id="tableProduits" prefHeight="400" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
                <TableColumn fx:id="colCategorie" text="Catégorie" prefWidth="150"/>
                <TableColumn fx:id="colPrix" text="Prix" prefWidth="100"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
                <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
                <TableColumn fx:id="colImageUrl" text="Image" prefWidth="150"/>
                <TableColumn fx:id="colAction" text="Actions" prefWidth="200"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>