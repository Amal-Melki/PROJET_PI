<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.RowConstraints?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.Controllers.User.PaymentFormController"
      spacing="24"
      alignment="TOP_CENTER"
      style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef);">
    <padding>
        <Insets top="32" right="32" bottom="32" left="32"/>
    </padding>

    <VBox spacing="16" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Formulaire de Paiement"
                   style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
            </HBox>
        </HBox>
        <Label text="Veuillez remplir les informations de paiement."
               style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="24" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>

        <GridPane hgap="16" vgap="16">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0" prefWidth="180.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Numéro de Carte:" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
                <TextField fx:id="cardNumberField" promptText="XXXX XXXX XXXX XXXX" GridPane.columnIndex="1"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 8 12 8 12;" />

                <Label text="Date d'Expiration (MM/AA):" GridPane.rowIndex="1" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
                <TextField fx:id="expiryDateField" promptText="MM/AA" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 8 12 8 12;" />

                <Label text="CVC:" GridPane.rowIndex="2" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
                <TextField fx:id="cvcField" promptText="XXX" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 8 12 8 12;" />

                <Label text="Montant à Payer:" GridPane.rowIndex="3" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
                <Label fx:id="amountLabel" text="0.00 TND" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;">
                    <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </GridPane>

        <HBox alignment="CENTER" spacing="20.0">
            <Button onAction="#processPayment" text="Confirmer le Paiement"
                    style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand; -fx-padding: 12 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" />
            <Button onAction="#cancelPayment" text="Annuler"
                    style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand; -fx-padding: 12 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" />
        </HBox>
    </VBox>
</VBox>