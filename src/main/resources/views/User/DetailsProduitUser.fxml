<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.Controllers.User.DetailsProduitUserController"
      spacing="24"
      style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef);">
    <padding>
        <Insets top="32" right="32" bottom="32" left="32"/>
    </padding>

    <VBox spacing="16" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Détails du Produit"
                   style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                <Button mnemonicParsing="false" onAction="#retourAffichageProduits" text="↩ Retour"
                        style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 8; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand; -fx-padding: 12 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>
            </HBox>
        </HBox>
        <Label text="Informations détaillées sur le produit sélectionné."
               style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
    </VBox>

    <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <StackPane alignment="CENTER" prefHeight="220.0" prefWidth="220.0">
            <ImageView fx:id="productImageView" fitHeight="200.0" fitWidth="200.0" preserveRatio="true"
                       style="-fx-border-color: #e0e0e0; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-color: white;">
                <effect>
                    <DropShadow color="#00000033" offsetX="3.0" offsetY="3.0" radius="5.0" />
                </effect>
            </ImageView>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </StackPane>

        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="productNameLabel" text="Nom du produit"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Catégorie:" style="-fx-font-size: 16px; -fx-text-fill: #555555; -fx-font-weight: bold;"/>
                <Label fx:id="productCategoryLabel" text="[Catégorie]" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
            </HBox>

            <VBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets top="10.0" /> </padding>
                <Label text="Description:" style="-fx-font-size: 16px; -fx-text-fill: #555555; -fx-font-weight: bold;"/>
                <Label fx:id="productDescriptionLabel" text="[Description détaillée du produit.]"
                       style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" wrapText="true" maxWidth="200"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5">
                <padding>
                    <Insets top="10.0" /> </padding>
                <Label text="Prix:" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="productPriceLabel" text="[Prix €]"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
            </VBox>

        </VBox>
        <HBox alignment="CENTER" spacing="20.0">
            <Button onAction="#acheterProduit" text="🛒 Acheter Maintenant"
                    prefWidth="220" prefHeight="45"
                    style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-font-size: 14px;
                           -fx-background-radius: 8; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand; -fx-padding: 12 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>

            <Button onAction="#supprimerDuPanier" text="🗑️ Supprimer du Panier"
                    prefWidth="220" prefHeight="45"
                    style="-fx-background-color: linear-gradient(to right, #f39c12, #e67e22); -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-font-size: 14px;
                           -fx-background-radius: 8; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand; -fx-padding: 12 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>
        </HBox>

    </VBox>
</VBox>