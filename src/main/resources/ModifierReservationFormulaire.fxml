<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.ModifierReservationFormulaire"
      prefHeight="520.0" prefWidth="640.0"
      style="-fx-background-color: pink;">

    <children>
        <Label layoutX="70.0" layoutY="50.0" text="Matériel :">
            <font><Font size="14.0"/></font>
        </Label>

        <!-- ✅ Remplacement du ComboBox par un Label en lecture seule -->
        <Label fx:id="lblNomMateriel" layoutX="200.0" layoutY="50.0" prefWidth="200.0">
            <font><Font size="14.0"/></font>
            <style>
                -fx-background-color: white;
                -fx-border-color: #ccc;
                -fx-padding: 5;
                -fx-border-radius: 5;
                -fx-background-radius: 5;
            </style>
        </Label>

        <Label layoutX="70.0" layoutY="110.0" text="Date début :">
            <font><Font size="14.0"/></font>
        </Label>
        <DatePicker fx:id="dpDebut" layoutX="200.0" layoutY="110.0"/>

        <Label layoutX="70.0" layoutY="170.0" text="Date fin :">
            <font><Font size="14.0"/></font>
        </Label>
        <DatePicker fx:id="dpFin" layoutX="200.0" layoutY="170.0"/>

        <Label layoutX="70.0" layoutY="230.0" text="Quantité :">
            <font><Font size="14.0"/></font>
        </Label>
        <TextField fx:id="tfQuantite" layoutX="200.0" layoutY="230.0" prefWidth="100.0"/>

        <Label layoutX="70.0" layoutY="290.0" text="Statut :">
            <font><Font size="14.0"/></font>
        </Label>
        <ComboBox fx:id="cbStatut" layoutX="200.0" layoutY="290.0" prefWidth="150.0"/>

        <Button fx:id="btnEnregistrer" layoutX="250.0" layoutY="400.0" text="Enregistrer" onAction="#modifierReservation">
            <font><Font size="14.0"/></font>
            <style>
                -fx-background-color: #ff8cb3;
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-background-radius: 15;
                -fx-cursor: hand;
                -fx-padding: 6 14 6 14;
            </style>
        </Button>
    </children>
</Pane>
