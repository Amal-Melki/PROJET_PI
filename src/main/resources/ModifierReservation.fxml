<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.ModifierReservation"
      prefHeight="530.0" prefWidth="790.0"
      style="-fx-background-color: pink;">

    <children>

        <!-- Bouton Retour moderne -->
        <Button fx:id="btnRetourAccueil"
                layoutX="670.0" layoutY="20.0"
                text="↩ Retour"
                onAction="#retourAccueil"
                style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 6 12 6 12;" />

        <!-- Titre élégant -->
        <Text text="Liste Réservations"
              layoutX="250.0" layoutY="70.0"
              style="-fx-fill: white;">
            <font>
                <Font name="Segoe UI Bold" size="30.0" />
            </font>
        </Text>

        <!-- Tableau stylisé -->
        <TableView fx:id="tableReservations"
                   layoutX="10.0" layoutY="100.0"
                   prefWidth="770.0" prefHeight="400.0"
                   style="-fx-background-color: #ffe6eb;">
            <columns>
                <TableColumn fx:id="colNomMateriel" prefWidth="120.0" text="Matériel" />
                <TableColumn fx:id="colDateDebut" prefWidth="120.0" text="Date Début" />
                <TableColumn fx:id="colDateFin" prefWidth="120.0" text="Date Fin" />
                <TableColumn fx:id="colQuantite" prefWidth="100.0" text="Quantité" />
                <TableColumn fx:id="colStatut" prefWidth="100.0" text="Statut" />
                <TableColumn fx:id="colAction" prefWidth="200.0" text="Action" />
            </columns>
        </TableView>

    </children>
</Pane>
