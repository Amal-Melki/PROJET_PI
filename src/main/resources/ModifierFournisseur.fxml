<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.ModifierFournisseur"
      prefHeight="500.0" prefWidth="750.0"
      style="-fx-background-color: pink;">

    <children>

        <!-- Bouton de retour en haut à droite -->
        <Button fx:id="btnRetourAccueil"
                layoutX="650.0" layoutY="20.0"
                text="↩ Retour"
                onAction="#retourAccueil"
                style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 6 12 6 12;" />

        <!-- Titre au centre en haut -->
        <Text text="Liste Fournisseurs"
              layoutX="250.0" layoutY="70.0"
              style="-fx-fill: white;">
            <font>
                <Font name="Segoe UI Bold" size="30.0"/>
            </font>
        </Text>

        <!-- Tableau des fournisseurs -->
        <TableView fx:id="tableFournisseurs"
                   layoutX="10.0" layoutY="100.0"
                   prefWidth="730.0" prefHeight="380.0"
                   style="-fx-background-color: #ffe6eb; -fx-border-radius: 10px; -fx-background-radius: 10px;">
            <columns>
                <TableColumn fx:id="colNom" prefWidth="300.0" text="Nom" />
                <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
                <TableColumn fx:id="colAction" prefWidth="200.0" text="Action" />
            </columns>
        </TableView>

    </children>
</Pane>
