<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.ModifierFournisseur"
      prefHeight="400.0" prefWidth="700.0"
      style="-fx-background-color: pink;">

    <children>
        <TableView fx:id="tableFournisseurs"
                   layoutX="10.0" layoutY="10.0"
                   prefWidth="680.0" prefHeight="380.0"
                   style="-fx-background-color: #ffe6eb;">
            <columns>
                <!-- Colonne nom -->
                <TableColumn fx:id="colNom"
                             prefWidth="300.0"
                             text="Nom" />

                <!-- Colonne email -->
                <TableColumn fx:id="colEmail"
                             prefWidth="200.0"
                             text="Email" />

                <!-- Colonne Action -->
                <TableColumn fx:id="colAction"
                             prefWidth="180.0"
                             text="Action" />
            </columns>
        </TableView>
    </children>
</Pane>
