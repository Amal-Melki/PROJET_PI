<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" style="-fx-background-color: pink;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.ConsulterEspacesClient">

    <children>
        <!-- Titre -->
        <Text layoutX="250.0" layoutY="50.0" style="-fx-fill: white;" text="Espaces Disponibles">
            <font>
                <Font name="Segoe UI Bold" size="30.0" />
            </font>
        </Text>

        <!-- Bouton Retour -->
        <Button fx:id="btnRetour" layoutX="700.0" layoutY="20.0" onAction="#retourMenu"
                style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand; -fx-padding: 6 12 6 12;"
                text="↩ Retour" />

        <!-- TableView pour afficher les espaces disponibles -->
        <TableView fx:id="tableEspaces" layoutX="50.0" layoutY="100.0" prefHeight="350.0" prefWidth="700.0"
                   style="-fx-border-color: #ff8fb3;
                    -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-family: 'Segoe UI';">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60" text="ID" />
                <TableColumn fx:id="colNom" prefWidth="120" text="Nom" />
                <TableColumn fx:id="colType" prefWidth="120" text="Type" />
                <TableColumn fx:id="colCapacite" prefWidth="100" text="Capacité" />
                <TableColumn fx:id="colLocalisation" prefWidth="140" text="Localisation" />
                <TableColumn fx:id="colPrix" prefWidth="100" text="Prix" />
                <TableColumn fx:id="colDisponibilite" prefWidth="120" text="Disponibilité" />
            </columns>
        </TableView>

        <!-- Boutons d'action -->
        <HBox alignment="CENTER" layoutX="50.0" layoutY="470.0" prefWidth="700.0" spacing="30.0">
            <Button fx:id="btnReserver" onAction="#reserverEspace" prefHeight="40.0" prefWidth="160.0"
                    style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand;"
                    text="Réserver" />

            <Button fx:id="btnVoirReservations" onAction="#voirMesReservations" prefHeight="40.0" prefWidth="160.0"
                    style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand;"
                    text="Mes Réservations" />

            <Button fx:id="btnRafraichir" onAction="#rafraichirListe" prefHeight="40.0" prefWidth="160.0"
                    style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand;"
                    text="Rafraîchir" />
        </HBox>
    </children>
</AnchorPane>