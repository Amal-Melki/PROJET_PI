<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: pink;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.ModifierEspaceAdminController">

   <children>

      <!-- Bouton Retour -->
      <Button fx:id="btnRetour" layoutX="600.0" layoutY="20.0" mnemonicParsing="false" onAction="#retourMenu" style="-fx-background-color: #ff8cb3; -fx-text-fill: white; -fx-font-weight: bold;                      -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 6 12 6 12;" text="↩ Retour" />

      <!-- Titre Enregistrer Espace -->
      <Text layoutX="260.0" layoutY="70.0" style="-fx-fill: white;" text="Modifier Espace">
         <font>
            <Font name="Segoe UI Semibold" size="28.0" />
         </font>
      </Text>

      <!-- Labels stylisés -->
      <Label layoutX="100.0" layoutY="120.0" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Nom :" />

      <Label layoutX="100.0" layoutY="180.0" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Type :" />

      <Label layoutX="100.0" layoutY="240.0" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Capacité :" />

      <Label layoutX="100.0" layoutY="300.0" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Localisation :" />

      <Label layoutX="100.0" layoutY="360.0" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Prix :" />

      <!-- TextFields stylisés -->
      <TextField fx:id="tfNom" layoutX="220.0" layoutY="115.0" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff;" />
      <TextField fx:id="tfType" layoutX="220.0" layoutY="175.0" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff;" />
      <TextField fx:id="tfCapacite" layoutX="220.0" layoutY="235.0" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff;" />
      <TextField fx:id="tfLocalisation" layoutX="220.0" layoutY="295.0" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff;" />
      <TextField fx:id="tfPrix" layoutX="220.0" layoutY="355.0" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff;" />

      <!-- Bouton Enregistrer -->
      <Button fx:id="btnEnregistrer" layoutX="290.0" layoutY="420.0" onAction="#modifierEspace" prefHeight="40.0"
              prefWidth="120.0" style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold;
                 -fx-font-size: 15px; -fx-background-radius: 20; -fx-cursor: hand;" text="Enregistrer"/>

   </children>
</Pane>
