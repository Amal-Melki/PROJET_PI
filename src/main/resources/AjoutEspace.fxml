<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="518.0" prefWidth="636.0" style="-fx-background-color: pink;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.AjoutEspaceController">
    <children>

        <!-- Bouton Retour -->
        <Button fx:id="btnRetour" layoutX="520.0" layoutY="20.0" onAction="#retourMenu" style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 6 12 6 12;" text="↩ Retour" />

        <!-- Titre -->
        <Text layoutX="200.0" layoutY="70.0" style="-fx-fill: white;" text="Ajouter un Espace">
            <font>
                <Font name="Segoe UI Bold" size="30.0" />
            </font>
        </Text>

        <!-- Labels -->
        <Label layoutX="80.0" layoutY="110.0" text="Nom :">
            <font><Font size="15.0" /></font>
        </Label>
        <Label layoutX="80.0" layoutY="160.0" text="Type :">
            <font><Font size="15.0" /></font>
        </Label>
        <Label layoutX="80.0" layoutY="210.0" text="Capacité :">
            <font><Font size="15.0" /></font>
        </Label>
        <Label layoutX="80.0" layoutY="260.0" text="Localisation :">
            <font><Font size="15.0" /></font>
        </Label>
        <Label layoutX="80.0" layoutY="310.0" text="Prix :">
            <font><Font size="15.0" /></font>
        </Label>
        <Label layoutX="80.0" layoutY="360.0" text="Disponibilité :">
            <font><Font size="15.0" /></font>
        </Label>

        <!-- Champs de saisie -->
        <TextField fx:id="nomField" layoutX="220.0" layoutY="105.0" prefWidth="300.0" text="azurcity" />
        <TextField fx:id="typeField" layoutX="220.0" layoutY="155.0" prefWidth="300.0" text="anniversaire" />
        <TextField fx:id="capaciteField" layoutX="220.0" layoutY="205.0" prefWidth="300.0" text="500" />
        <TextField fx:id="localisationField" layoutX="220.0" layoutY="255.0" prefWidth="300.0" text="ben arous" />
        <TextField fx:id="prixField" layoutX="220.0" layoutY="305.0" prefWidth="300.0" text="1500" />
        <CheckBox fx:id="disponibiliteCheck" layoutX="220.0" layoutY="355.0" />

        <!-- Bouton Ajouter -->
        <Button layoutX="260.0" layoutY="420.0" onAction="#ajouterEspace" prefHeight="45.0" prefWidth="130.0" style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 20; -fx-cursor: hand;" text="Ajouter" />

    </children>
</Pane>
