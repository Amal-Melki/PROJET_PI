<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.Controllers.ModifierProduit"
      prefHeight="520.0" prefWidth="650.0" style="-fx-background-color: lightblue;">
    <children>
        <!-- Labels -->
        <Label layoutX="60.0" layoutY="40.0" text="Nom">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label layoutX="60.0" layoutY="100.0" text="Catégorie">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label layoutX="60.0" layoutY="160.0" text="Quantité">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label layoutX="60.0" layoutY="220.0" text="Prix">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label layoutX="60.0" layoutY="280.0" text="Description">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <!-- Fields -->
        <TextField fx:id="tfNom" layoutX="200.0" layoutY="40.0" prefWidth="200.0"/>
        <ComboBox fx:id="cbCategorie" layoutX="200.0" layoutY="100.0" prefWidth="200.0"/>
        <TextField fx:id="tfQuantite" layoutX="200.0" layoutY="160.0" prefWidth="200.0"/>
        <TextField fx:id="tfPrix" layoutX="200.0" layoutY="220.0" prefWidth="200.0"/>
        <TextArea fx:id="taDescription" layoutX="200.0" layoutY="280.0" prefHeight="100.0" prefWidth="360.0"/>

        <!-- Button -->
        <Button fx:id="btnModifier" layoutX="280.0" layoutY="420.0" text="Modifier" onAction="#modifierProduit">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </children>
</Pane>
