<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.Controllers.SupprimerProduit"
      prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: lightcoral;">
    <children>
        <Label layoutX="50.0" layoutY="40.0" text="Êtes-vous sûr de vouloir supprimer ce produit ?">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Button layoutX="50.0" layoutY="100.0" text="Oui" onAction="#supprimerProduit"/>
        <Button layoutX="200.0" layoutY="100.0" text="Non" onAction="#SupprimerProduit"/>
    </children>
</Pane>
