<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.esprit.controllers.LoginController"
            prefHeight="400.0" prefWidth="600.0" styleClass="background">
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="login-panel">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Text styleClass="title-text" text="Connexion"/>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Nom d'utilisateur:" styleClass="label-field"/>
                <TextField fx:id="usernameField" promptText="Entrez votre nom d'utilisateur" styleClass="text-field"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Mot de passe:" styleClass="label-field"/>
                <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" styleClass="text-field"/>
            </HBox>

            <Button fx:id="loginButton" text="Se connecter" onAction="#handleLogin" styleClass="button-primary"/>

            <Label fx:id="messageLabel" styleClass="message-label"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="footer">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Â© 2025 Gestion Utilisateurs" styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>