<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.chart.PieChart?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.esprit.controllers.DashboardController"
            prefHeight="600.0" prefWidth="800.0" styleClass="background">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Text styleClass="header-text" text="Tableau de bord"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userInfoLabel" styleClass="user-info"/>
            <Button fx:id="logoutButton" text="Déconnexion" onAction="#handleLogout" styleClass="button-secondary"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" styleClass="sidebar">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            <Button text="Tableau de bord" onAction="#showDashboard" styleClass="sidebar-button"/>
            <Button text="Gestion Utilisateurs" onAction="#showUserManagement" styleClass="sidebar-button"/>
            <Button text="Statistiques" onAction="#showStatistics" styleClass="sidebar-button"/>
            <Button text="Paramètres" onAction="#showSettings" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="content-area">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="20" alignment="CENTER">
                <VBox styleClass="stat-card" alignment="CENTER">
                    <Text styleClass="stat-number" fx:id="totalUsersText"/>
                    <Text styleClass="stat-label" text="Utilisateurs"/>
                </VBox>

                <VBox styleClass="stat-card" alignment="CENTER">
                    <Text styleClass="stat-number" fx:id="adminCountText"/>
                    <Text styleClass="stat-label" text="Administrateurs"/>
                </VBox>

                <VBox styleClass="stat-card" alignment="CENTER">
                    <Text styleClass="stat-number" fx:id="clientCountText"/>
                    <Text styleClass="stat-label" text="Clients"/>
                </VBox>
            </HBox>

            <PieChart fx:id="userTypeChart" title="Répartition des utilisateurs" legendVisible="true"/>

            <TableView fx:id="recentUsersTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID"/>
                    <TableColumn fx:id="usernameColumn" text="Nom d'utilisateur"/>
                    <TableColumn fx:id="emailColumn" text="Email"/>
                    <TableColumn fx:id="roleColumn" text="Rôle"/>
                </columns>
            </TableView>
        </VBox>
    </center>


</BorderPane>