<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.esprit.controllers.EvenementsController">
    
    <top>
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #ff7fa8;" spacing="20">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
                
                <Label text="Gestion des Événements" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                <TextField fx:id="searchField" promptText="Rechercher un événement..." prefWidth="300"/>
                <Button fx:id="btnAjouter" 
                        text="Ajouter Événement" 
                        onAction="#handleAjouter"
                        style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" style="-fx-background-color: white;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Events Table -->
            <TableView fx:id="tableEvenements" VBox.vgrow="ALWAYS" styleClass="custom-table">
                <columns>
                    <TableColumn fx:id="colTitle" text="Titre" prefWidth="150"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
                    <TableColumn fx:id="colDateDebut" text="Date de début" prefWidth="120"/>
                    <TableColumn fx:id="colDateFin" text="Date de fin" prefWidth="120"/>
                    <TableColumn fx:id="colLatitude" text="Latitude" prefWidth="100"/>
                    <TableColumn fx:id="colLongitude" text="Longitude" prefWidth="100"/>
                    <TableColumn fx:id="colCategories" text="Catégories" prefWidth="150"/>
                    <TableColumn fx:id="colNbrPlaces" text="Places disponibles" prefWidth="120"/>
                    <TableColumn fx:id="colModifier" text="Modifier" prefWidth="100"/>
                    <TableColumn fx:id="colSupprimer" text="Supprimer" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane> 