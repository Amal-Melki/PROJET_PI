<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.LoginController"
      alignment="CENTER" spacing="20" style="-fx-background-color: pink;"
      prefHeight="600.0" prefWidth="400.0">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Logo/Title -->
    <Text text="Connexion" style="-fx-fill: white;">
        <font>
            <Font name="Segoe UI Bold" size="30.0"/>
        </font>
    </Text>

    <!-- Email Field -->
    <VBox spacing="5">
        <Label text="Email" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="txtEmail" 
                  prefHeight="40" 
                  style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: white; -fx-background-color: white;"/>
    </VBox>

    <!-- Password Field -->
    <VBox spacing="5">
        <Label text="Mot de passe" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        <PasswordField fx:id="txtPassword" 
                      prefHeight="40" 
                      style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: white; -fx-background-color: white;"/>
    </VBox>

    <!-- Remember Me Checkbox -->
    <CheckBox fx:id="chkRememberMe" 
              text="Se souvenir de moi" 
              style="-fx-text-fill: white; -fx-font-size: 14px;"/>

    <!-- Login Button -->
    <Button fx:id="btnLogin" 
            text="Se connecter" 
            prefWidth="200" 
            prefHeight="45"
            onAction="#handleLogin"
            style="-fx-background-color: #ff7fa8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 25; -fx-cursor: hand;"/>

    <!-- Google Sign-In Button -->
    <Button fx:id="btnGoogleSignIn" 
            text="Se connecter avec Google" 
            prefWidth="200" 
            prefHeight="45"
            onAction="#handleGoogleSignIn"
            style="-fx-background-color: #4285F4; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 25; -fx-cursor: hand;"/>

    <!-- Forgot Password Link -->
    <Hyperlink fx:id="lnkForgotPassword" 
               text="Mot de passe oubliÃ© ?" 
               onAction="#handleForgotPassword"
               style="-fx-text-fill: white; -fx-font-size: 14px; -fx-border-color: transparent;"/>

    <!-- Register Link -->
    <HBox alignment="CENTER" spacing="5">
        <Text text="Pas encore de compte ?" style="-fx-fill: white; -fx-font-size: 14px;"/>
        <Hyperlink fx:id="lnkRegister" 
                   text="S'inscrire" 
                   onAction="#handleRegister"
                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-border-color: transparent;"/>
    </HBox>

</VBox> 