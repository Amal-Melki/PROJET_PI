<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.esprit.controllers.NavigationController">
    
    <top>
        <HBox style="-fx-background-color: #ff7fa8;" spacing="20">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <!-- Logo/Brand -->
            <Label text="EventHub" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            
            <!-- Navigation Menu -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button fx:id="btnAccueil" 
                        text="Accueil" 
                        onAction="#handleAccueil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <Button fx:id="btnEvenements" 
                        text="Événements" 
                        onAction="#handleEvenements"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <Button fx:id="btnEditerProfil" 
                        text="Éditer Profil" 
                        onAction="#handleEditerProfil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <Button fx:id="btnGestionEvenements" 
                        text="Gestion Événements" 
                        onAction="#handleGestionEvenements"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- User Menu -->
            <HBox fx:id="userInfoBox" spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <ImageView fx:id="userImageView" fitWidth="40" fitHeight="40" preserveRatio="true"/>
                <Label fx:id="userNameLabel" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Button fx:id="btnDeconnexion" 
                        text="Déconnexion" 
                        onAction="#handleDeconnexion"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>
        </HBox>
    </top>
    
    <center>
        <!-- Content will be loaded here -->
        <StackPane fx:id="contentArea"/>
    </center>
</BorderPane> 