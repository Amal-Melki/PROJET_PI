<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.UsersController">
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Rechercher..." />
        <ComboBox fx:id="roleFilter" promptText="Filtrer par rôle" />
        <Button onAction="#handleSearch" text="Rechercher" />
    </HBox>
    
    <TableView fx:id="usersTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="usernameColumn" text="Nom d'utilisateur" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="roleColumn" text="Rôle" />
        </columns>
    </TableView>
    
    <HBox spacing="10">
        <Button onAction="#handleAddUser" text="Ajouter" />
        <Button onAction="#handleEditUser" text="Modifier" />
        <Button onAction="#handleDeleteUser" text="Supprimer" />
    </HBox>
</VBox>
