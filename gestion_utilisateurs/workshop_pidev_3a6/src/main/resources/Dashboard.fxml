<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Text text="Tableau de Bord" 
          style="-fx-fill: #ff7fa8; -fx-font-weight: bold;">
        <font>
            <Font name="Segoe UI Bold" size="24.0"/>
        </font>
    </Text>

    <!-- Welcome Message -->
    <Text text="Bienvenue dans votre application de gestion d'événements" 
          style="-fx-fill: #666666;">
        <font>
            <Font name="Segoe UI" size="16.0"/>
        </font>
    </Text>

    <!-- Content Area -->
    <VBox spacing="10" style="-fx-background-color: #f8f8f8; -fx-background-radius: 5; -fx-padding: 15;">
        <Text text="Statistiques rapides" 
              style="-fx-fill: #ff7fa8; -fx-font-weight: bold;">
            <font>
                <Font name="Segoe UI Semibold" size="18.0"/>
            </font>
        </Text>
        
        <GridPane hgap="20" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <!-- Stats Cards -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Text text="Utilisateurs" style="-fx-fill: #666666;">
                    <font>
                        <Font name="Segoe UI" size="14.0"/>
                    </font>
                </Text>
                <Text text="0" style="-fx-fill: #ff7fa8; -fx-font-weight: bold;">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0"/>
                    </font>
                </Text>
            </VBox>
            
            <VBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Text text="Événements" style="-fx-fill: #666666;">
                    <font>
                        <Font name="Segoe UI" size="14.0"/>
                    </font>
                </Text>
                <Text text="0" style="-fx-fill: #ff7fa8; -fx-font-weight: bold;">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0"/>
                    </font>
                </Text>
            </VBox>
            
            <VBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Text text="Réservations" style="-fx-fill: #666666;">
                    <font>
                        <Font name="Segoe UI" size="14.0"/>
                    </font>
                </Text>
                <Text text="0" style="-fx-fill: #ff7fa8; -fx-font-weight: bold;">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0"/>
                    </font>
                </Text>
            </VBox>
        </GridPane>
    </VBox>
</VBox> 