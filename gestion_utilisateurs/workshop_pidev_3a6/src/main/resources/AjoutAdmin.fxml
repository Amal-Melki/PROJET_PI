<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.esprit.controllers.AjoutAdminController"
      spacing="20" 
      style="-fx-background-color: white; -fx-background-radius: 10;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Text text="Ajouter un Administrateur" 
          style="-fx-fill: #ff7fa8; -fx-font-weight: bold;">
        <font>
            <Font name="Segoe UI Bold" size="24.0"/>
        </font>
    </Text>

    <!-- Form -->
    <GridPane vgap="10" hgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Nom -->
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNom" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Prénom -->
        <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtPrenom" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Email -->
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- Mot de passe -->
        <Label text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <!-- Rôle -->
        <Label text="Rôle:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ComboBox fx:id="comboRole" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" 
                onAction="#handleAjouter"
                style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand; -fx-padding: 8 20 8 20;"/>

        <Button text="Annuler" 
                onAction="#handleAnnuler"
                style="-fx-background-color: #ff8fb3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 25; -fx-font-family: 'Segoe UI Semibold'; -fx-cursor: hand; -fx-padding: 8 20 8 20;"/>
    </HBox>
</VBox> 